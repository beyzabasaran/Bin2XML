              <xsd:element name="weight" type="weight"/>
            </xsd:sequence>
            <xsd:attribute name="row_id" type="xsd:string" use="required"/>
          </xsd:complexType>
        </xsd:element>
      </xsd:sequence>
    </xsd:complexType>
  </xsd:element> 
